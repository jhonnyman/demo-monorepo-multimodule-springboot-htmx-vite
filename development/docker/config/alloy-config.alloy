logging {
  level = "debug"
  format = "logfmt"
}

livedebugging {
  enabled = true
}

local.file_match "local" {
  path_targets = [
    {"__path__" = "/var/log/spring/*.log"},
  ]
  sync_period = "10s"
}

loki.source.file "local" {
  targets = local.file_match.local.targets
  forward_to = [loki.write.send_to_loki.receiver]
}

loki.write "send_to_loki" {
  endpoint {
    url = "http://loki:3100/loki/api/v1/push"
  }
}
